<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/add_more_view"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="w,1:1"
        android:background="@drawable/view_more_drawable"
        />
    <TextView
        android:id="@+id/tv_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/plus"
        app:layout_constraintTop_toTopOf="@id/add_more_view"
        app:layout_constraintStart_toStartOf="@id/add_more_view"
        app:layout_constraintEnd_toEndOf="@id/add_more_view"
        app:layout_constraintBottom_toTopOf="@id/tv_add_more"
        android:includeFontPadding="false"
        android:gravity="center"
        app:layout_constraintVertical_chainStyle="packed"
        />
    <TextView
        android:id="@+id/tv_add_more"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/add_more"
        android:layout_marginTop="5dp"
        android:includeFontPadding="false"
        android:textSize="@dimen/sp_9"
        app:layout_constraintBottom_toBottomOf="@id/add_more_view"
        app:layout_constraintEnd_toEndOf="@id/add_more_view"
        app:layout_constraintStart_toStartOf="@id/add_more_view"
        app:layout_constraintTop_toBottomOf="@id/tv_plus"
        android:gravity="center"
        />
</androidx.constraintlayout.widget.ConstraintLayout>